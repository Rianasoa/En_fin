					<label class="labelle" for="country-choice">Pays</label>
					<select name="country" id="country-choice" class="field" required>
						<option value="" checked>Pays</option>
						<% @countries.collect do |d| %>
						<option value="<%=d.name%>"><%=d.name%></option>
						<% end %>
					</select>
				</div>

