					<option value="21:30">21:30</option>
					<option value="22:00">22:00</option>
				</select>
			</div>
			<div>
				<%= submit_tag("Je valide") %>	
			</div>
		 <% end %>
	</div>

<hr class="hr.new5">
<!-- ======================================================================== -->
<div class="row">
	<div class="col-sm-9">

	<%= form_tag(save_session_path,id:"form-data", 'data-spas':"#{@spas}",'data-spaoptions':"#{@spaoptions}",'data-massages':"#{@massages}") do %>

	<div id="prestation-list">
		<div class="spa">
			<h2>LOCATION SPA A DOMICILE</h2>
			<div class="spa-click">
				<p>Je souhaite reserver <i class="fa fa-minus-circle" id="remove-spa"></i><span id="number-spa">0</span><i class="fa fa-plus-circle" id="add-spa"></i> spa</p>

			</div>
			<div id="spa-input">

			</div>
		</div>
<!-- ======================================================================== -->
		<div class="massage">
			<h2>MASSAGE A DOMICILE</h2>
			
			<!-- #################### -->
			<div id="select-prestation">
				<h4>Je souhaite reserver pour :</h4>
				<div>
					<p>Homme<i class="fa fa-minus-circle remove-massage" data-cat="Homme"></i><span id="number-Homme">0</span><i class="fa fa-plus-circle add-massage" data-cat="Homme"></i></p>
				</div>
				<div>
					<p>Femme<i class="fa fa-minus-circle remove-massage" data-cat="Femme"></i><span id="number-Femme">0</span><i class="fa fa-plus-circle add-massage" data-cat="Femme"></i></p>
				</div>


			</div>

			<div id="massage-input">
				

			</div>

			<!-- #################### -->
			<div class="praticien">
				<h4>Infos complementaires</h4>
				<label>Type de praticien</label>
				<div>
				  <input type="radio" id="man" name="praticien" value="Homme">
				  <label for="man">Homme</label>
				</div>

				<div>
				  <input type="radio" id="woman" name="praticien" value="Femme">
				  <label for="woman">Femme</label>
				</div>

				<div>
				  <input type="radio" id="other" name="praticien" value="Peu importe">
				  <label for="other">Peu importe</label>
				</div>
			</div>
		</div>
<!-- ======================================================================== -->
		<div class="cadeaux">
			<h2>FAITE PLAISIR AVEC NOS IDEES CADEAUX</h2>
			<ul>
				<% @cadeaus.each do |cadeau| %>
					<li><%= cadeau.name %>: <%= cadeau.price %>€
						<i class="fa fa-minus-circle cadeau-rmv" data-id="<%= cadeau.id %>" data-price="<%= cadeau.price %>" data-name="<%= cadeau.name %>"></i>
						<span id="<%= cadeau.id %>-nbr">0</span>
						<i class="fa fa-plus-circle cadeau-add" data-id="<%= cadeau.id %>" data-price="<%= cadeau.price %>" data-name="<%= cadeau.name %>"></i>
					</li>
				<% end %>
			</ul>
			<input type="text" value="[]" name="cadeau" id="cadeau-id" class="hidden">
		</div>

	</div>


	<%= submit_tag("Confirmer commandes", id:"submi-tag",  class:"confirm-command btn btn-primary a-btn text-btn") %>

	<% end %> <!-- Fin formulaire -->
<!-- ======================================================================== -->
	<br><br><br><br>
	</div>
	<div class="col-sm-3">
		<h2>Votre commande</h2>
		<p id="empty-order">Selectionner votre prestation et vos cadeau</p>
		<div id="spa-order" class="hidden">
			<h3>Location spa <span id="spa-price-total"></span></h3>
		</div>

		<div id="massage-order" class="hidden">
			<h3>Massage <span id="massage-price-total"></span></h3>

		</div>

		<div id="cadeau-order" class="hidden">
			<h3>Vos cadeau <span id="cadeau-price-total"></span></h3>
			<div>
			</div>
		</div>

		<div id="code-promo" class="hidden">
			<h3>Code Promo</h3>
			<label for="codeP">code promo : </label>
			<input type="text" name="code" id="codeP">
		</div>

		<div id="div-price" class="hidden">
			<p>PRIX TOTAL: <strong id="total-price"></strong>€</p>
		</div>

	</div>
</div>

