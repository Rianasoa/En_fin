if (<%= @test %> == true) {
	$("#alert-code").removeClass("hidden");
	$("#form-promo-code").addClass("hidden");
	$("#alert-code").html("Votre code promo <%= @code_value[0] %> est validé avec succès. Vous avez gagné un reduction de " + parseInt(<%= @code_value[1] %>)+"€ pour chaque prix et acompte à payer!");
	let zone = JSON.parse(sessionStorage.getItem("zone"));
	zone.code = ["<%= @code_value[0] %>",parseInt(<%= @code_value[1] %>)];
	sessionStorage.setItem("zone",JSON.stringify(zone));
	$("#inpcode").val("<%= @code_value[0] %>");
	let a = parseInt($("#totalPricePrestation").html());
	let b = parseInt($("#totalAcomptePrestation").html());
	if(a > 0){
		$("#totalPricePrestation").html(a-zone.code[1]);
	}
	if(b > 0){
		$("#totalAcomptePrestation").html(b-zone.code[1]);
	}
}else{
	alert("Code promo non reconnu");
}
