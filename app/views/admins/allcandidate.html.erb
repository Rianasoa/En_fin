    <div class="secotionTitle">
      <h2 id="service" class="poli1 police_massage"><span>Liste des candidats</span></h2>
    </div>
<table border="1" class='entete'>
	<tr>
		<th>Action</th>
		<th>Sexe</th>
		<th>Prenom</th>
		<th>Nom</th>
		<th>Date de naissance</th>
		<th>Raison sociale</th>
		<th >Siren</th>
		<th>Email</th>
		<th>TÃ©lephone</th>
		<th>Adresse</th>
		<th>Code postale</th>
		<th>Ville</th>
		<th>Pays</th>
		<th>Services</th>
		<th>Zone de prestations</th>
	</tr>
	<% unless @candidates.empty? %>
	<% @candidates.each do |candidate| %>
	<tr>
		<td>
<%= link_to '<i class="fas fa-eye button1 "></i>'.html_safe, show_edit_candidate_path(candidate.id), title:"Apropos du candidat",class:"button1 button" %> 
		</td>
		<td> <%= candidate.sexe %> </td>
		<td> <%= candidate.first_name %> </td>
		<td> <%= candidate.last_name %> </td>
		<td> <%= candidate.date_of_birth %> </td>
		<td> <%= candidate.raison_sociale %> </td>
		<td style="max-width: 70px;word-wrap: break-word;"> <%= candidate.siren %> </td>
		<td> <%= candidate.email %> </td>
		<td> <%= candidate.telephone %> </td>
		<td> <%= candidate.adresse %> </td>
		<td> <%= candidate.zip_code %> </td>
		<td> <%= candidate.ville %> </td>
		<td> <%= candidate.country %> </td>
		<td> <%= candidate.services.gsub("|",", ") %> </td>
		<td> <%= candidate.countries.gsub("|",", ") %><% if candidate.departments %> : <br>	<ul><li> <%= candidate.departments.gsub("|",", ") %></li></ul><% end %></td>
	</tr>
	<% end %> 
	<% else%> 
	<tr>
		<td colspan="15" class="alert alert-danger aucuncandidat"> <center>	Aucun candidat postule pour l'instant </center></td>

	</tr>
	<% end %> 
</table>


	
	

