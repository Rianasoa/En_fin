<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-6">
  <p>
    <strong>First name:</strong>
    <%= @client.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @client.last_name %>
  </p>

  <p>
    <strong>Adresse:</strong>
    <%= @client.adresse %>
  </p>

  <p>
    <strong>Tel:</strong>
    <%= @client.tel %>
  </p>

  <p>
    <strong>Sexe:</strong>
    <%= @client.sexe %>
  </p>

  <p>
    <strong>Country:</strong>
    <%= @client.country %>
  </p>

  <p>
    <strong>Zip code:</strong>
    <%= @client.zip_code %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @client.email %>
  </p>
  <%= link_to 'Modifier', edit_clients_path(@client) %>
  <%= link_to 'Liste des clients', index_clients_path %>
  
</div>

  <div class="col-sm-6">
    <h2>Liste de ses commandes</h2>
    <table border="2">
      <tr>
        <td>N°</td>
        <td>Date</td>
        <td>Services</td>
        <td>Action</td>
      </tr>

      <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.prestation_date %></td>
        <td>
          <% order.services.each do |s| %>
            <li><%= s.name %></li>
          <% end %>
        </td>
        <td><a href="<%=admin_order_show_path(order.id)%>">Afficher détails</a></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
